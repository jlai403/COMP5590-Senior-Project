@using System.Web.Optimization
@using WorkflowManagementSystem.Models.Faculty
@using WorkflowManagementSystem.Models.Semesters
@using WorkflowManagementSystem.Views
@model WorkflowManagementSystem.Models.Course.CourseRequestInputViewModel

@Styles.Render("~/Content/css/theme/create-request.css")

<div class="container form center">
    <div class="col-md-12">
        @using (Html.BeginForm("CreateRequest", "Course", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            <div class="row center-text">
                <p class="header">Create Course</p>
            </div>

            <div class="progress-container">
                <div class="row">
                    <div class="progress">
                        <div class="progress-bar" style="width: 10%"></div>
                    </div>
                </div>
                <div class="row progress-steps">
                    <div class="col-xs-3 step-one-progress cursor">course</div>
                    <div class="col-xs-3 step-two-progress">impacts</div>
                    <div class="col-xs-3 step-three-progress">comments/<br/>attachments
                    </div>
                    <div class="col-xs-3 step-complete-progress">complete</div>
                </div>
            </div>

            <div class="row" style="margin-bottom: 15px;">
                <ul class="errors center-text">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <li>@ViewBag.ErrorMessage</li>
                    }
                </ul>
            </div>

            <!-- CONTEXT FOR STEP TWO AND THREE -->
            <div class="context hide small-text" style="padding: 10px 0; margin: -15px 0 15px; background-color: #FAFAFA;">
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Course Name:
                    </div>
                    <div class="col-xs-5">
                        <span class="courseName left-align"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Effective Term:
                    </div>
                    <div class="col-xs-5">
                        <span class="effectiveTerm left-align"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Program:
                    </div>
                    <div class="col-xs-5">
                        <span class="programName left-align"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Course Number:
                    </div>
                    <div class="col-xs-5">
                        <span class="courseNumber left-align"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Credits:
                    </div>
                    <div class="col-xs-5">
                        <span class="credits left-align"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Grading:
                    </div>
                    <div class="col-xs-5">
                        <span class="grading left-align"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5 right-align">
                        Calendar Entry:
                    </div>
                    <div class="col-xs-5">
                        <span class="calendarEntry left-align"></span>
                    </div>
                </div>
            </div>
            <!-- END CONTEXT FOR STEP TWO AND THREE -->

            <!-- STEP ONE START -->
            <div class="step-one">
                <div class="row">
                    <div class="col-md-3">
                        Requester
                    </div>
                    <div class="col-md-9">
                        @Html.TextBox("UserName", (string) ViewBag.UsersFullName, new {@class = "form-control", @readonly = "true"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Course Name
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Course name", tabindex = "1"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Effective Term
                    </div>
                    <div class="col-md-9">
                        @{
                            var semestersSelectList = Html.ConvertToSelectListItem((List<SemesterViewModel>) ViewBag.Semesters);
                        }
                        @Html.DropDownListFor(m => m.Semester, semestersSelectList, new {@class = "form-control", tabindex = "2"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Faculty
                    </div>
                    <div class="col-md-9">
                        @{
                            var facultiesSelectList = Html.ConvertToSelectListItem((List<FacultyViewModel>) ViewBag.Faculties);
                        }
                        @Html.DropDownList("Faculty", facultiesSelectList, new {@class = "form-control", tabindex = "3"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        Program
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(x => x.ProgramName, new {@class = "form-control", tabindex = "4", placeholder = "Program name"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Course Number
                    </div>
                    <div class="col-md-6">
                        @{
                            var disciplinesSelectList = Html.ConvertToSelectListItem((List<DisciplineViewModel>) ViewBag.Disciplines);
                        }
                        @Html.DropDownListFor(x => x.Discipline, disciplinesSelectList, new {@class = "form-control", tabindex = "5"})
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(x => x.CourseNumber, new {maxlength = "4", @class = "form-control", tabindex = "6", placeholder = "(i.e. 1xxx)"})
                    </div>
                </div>

                 <div class="row">
                    <div class="col-md-3 required">
                        Credits
                    </div>
                     <div class="col-md-3">
                         @{
                             var creditsSelectList = Html.ConvertToSelectListItem((string[]) ViewBag.Credits);
                         }
                         @Html.DropDownListFor(x => x.Credits, creditsSelectList, new {@class = "form-control", tabindex= "7"})
                     </div>

                     <div class="col-md-3 required">
                        Grading
                    </div>
                     <div class="col-md-3">
                         @{
                             var grading = Html.ConvertToSelectListItem((string[]) ViewBag.Gradings);
                         }
                         @Html.DropDownListFor(x => x.Grading, grading, new {@class = "form-control", tabindex="8"})
                     </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Calendar Entry
                    </div>
                    <div class="col-md-9">
                        <textarea name="CalendarEntry" class="form-control expandOnFocus" rows="2" tabindex="9"
                                  placeholder="Please provide the calendar entry that will be used for the proposed course.">@(Model == null ? "" : Model.CalendarEntry)</textarea>
                    </div>
                </div>

                <div class="row center-text" style="padding: 0 100px; margin: 15px 0;" tabindex="10">
                    <input class="form-control button dark-blue" type="button" value="Next"/>
                </div>
            </div>
            <!-- STEP ONE END -->

            <!-- STEP TWO START -->
            <div class="step-two">
                <div class="row">
                    <div class="col-md-3 required">
                        Cross Impact
                    </div>
                    <div class="col-md-9">
                        <textarea name="CrossImpact" class="form-control expandOnFocus" rows="2" tabindex="11"
                                  placeholder="Please identify how impact to other departments has been addressed, including General Education as appropriate">@(Model == null ? "" : Model.CrossImpact)</textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Student Impact
                    </div>
                    <div class="col-md-9">
                        <textarea name="StudentImpact" class="form-control expandOnFocus" rows="2" tabindex="12"
                                  placeholder="Please identify how student input or impact has been assessed">@(Model == null ? "" : Model.StudentImpact)</textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        Library Impact
                    </div>
                    <div class="col-md-9">
                        <textarea name="LibraryImpact" class="form-control expandOnFocus" rows="2" tabindex="13"
                                  placeholder="Please identify how impact to the Library has been addressed">@(Model == null ? "" : Model.LibraryImpact)</textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 required">
                        ITS Impact
                    </div>
                    <div class="col-md-9">
                        <textarea name="ItsImpact" class="form-control expandOnFocus" rows="2" tabindex="14"
                                  placeholder="Please identify how impact to ITS has been add
                            ressed">@(Model == null ? "" : Model.ITSImpact)</textarea>
                    </div>
                </div>

                <div class="row center-text" style="padding: 0 100px; margin: 15px 0;">
                    <input class="form-control button dark-blue" type="button" value="Next" tabindex="15"/>
                </div>
            </div>
            <!-- STEP TWO END -->

            <!-- STEP THREE START -->
            <div class="step-three">
                <div class="row">
                    <div class="col-md-3">
                        Comments
                    </div>
                    <div class="col-md-9">
                        <textarea name="Comment" class="form-control expandOnFocus" placeholder="Comments..." rows="2" tabindex="16">@(Model == null ? "" : Model.Comment)</textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        Attachments
                    </div>
                    <div class="col-md-9">
                        <input name="Files" type="file" multiple style="font-size: 12px;" tabindex="17"/>
                    </div>
                </div>

                <div class="row center-text" style="padding: 0 100px; margin: 15px 0;">
                    <input class="form-control button dark-blue" type="submit" value="Request" tabindex="18"/>
                </div>
            </div>
            <!-- STEP END START -->
        }
    </div>
</div>  

<script>
    var disciplinesLookUp = new Array();
    @foreach (var faculty in (List<FacultyViewModel>) ViewBag.Faculties)
    {
        @:disciplinesLookUp['@faculty.Name'] = new Array();
    }
    @foreach (var discipline in (List<DisciplineViewModel>)ViewBag.Disciplines)
    {
        @:disciplinesLookUp['@discipline.Faculty'].push(@Html.Raw(Json.Encode(discipline)));
    }

    $(document).ready(function () {
        bindAutoCompleteForProgram();
        setDisciplinesDropDown($("#Faculty").val());

        showStepOne();
        setProgressBar("1%");

        $(".step-one input, .step-one textarea").keydown(function(){
            // enter key
            if (event.keyCode == 13) {
                $(".step-one .button").click();
                return false;
            }
        });
        
        $(".step-two input, .step-two textarea").keydown(function(){
            // enter key
            if (event.keyCode == 13) {
                $(".step-two .button").click();
                return false;
            }
        });

        $("#Faculty").change(function() {
            setDisciplinesDropDown($(this).val());
        });
    });

    function bindAutoCompleteForProgram() {
        $("#ProgramName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "@Url.Action("ProgramNames", "Search")",
                    type: 'post',
                    dataType: "json",
                    data: {
                        keywords: request.term
                    },
                    success: function (data) {
                        response(data);
                    }
                });
            },
            minLength: 3
        });
    }

    function showStepOne() {
        $(".step-one").show();
        $(".step-two").hide();
        $(".step-three").hide();
    }

    function showStepTwo() {
        $(".step-one").hide();
        $(".step-two").show();
        $(".step-three").hide();
    }

    function showStepThree() {
        $(".step-three").show();
        $(".step-one").hide();
        $(".step-two").hide();
    }

    function setProgressBar(progress) {
        $(".progress-bar").css("width", progress);
    }

    function setDisciplinesDropDown(selectedFaculty) {
        var disciplines = disciplinesLookUp[selectedFaculty];
        $("#Discipline").empty();
        disciplines.forEach(function (discipline) {
            var option = $("<option></option>").val(discipline.Id).text(discipline.Code + " - " + discipline.Name);
            $("#Discipline").append(option);
        });
    }

    // STEP ONE
    $(".step-one .button").click(function() {
        clearErrors();

        validateCourseName();
        validateCourseNumber();
        validateCalendarEntry();

        if (hasErrors()) {
            printErrors();
            return false;
        }

        showStepTwo();
        showContext();
        setProgressBar("33.33%");
        $(".step-one-progress").on("click", function(e) {
            showStepOne();
        });

        $(".step-two-progress").addClass("cursor");
        $(".step-two-progress").on("click", function (e) {
            $(".step-one .button").click();
        });
        return true;
    });

    function showContext(){
        $(".context").removeClass("hide"); //workaround for !important attribute from bootstrap
        $(".context .courseName").text($("#Name").val());
        $(".context .effectiveTerm").text($("#Semester option:selected").text());
        var courseNumber = $("#Discipline option:selected").text().substr(0, 4) + $("#CourseNumber").val();
        $(".context .programName").text($("#ProgramName").val());
        $(".context .courseNumber").text(courseNumber);
        $(".context .credits").text($("#Credits option:selected").text());
        $(".context .grading").text($("#Grading option:selected").text());
        $(".context .calendarEntry").text($("textarea[name='CalendarEntry']").val());
    }

    function hideContext(){
        $(".context").addClass("hide");
    }

    function validateCourseName() {
        var courseName = $("#Name").val().trim();
        if (courseName === '') addError("Course name is required.", "Name");
    }

    function validateCourseNumber() {
        var courseName = $("#CourseNumber").val().trim();
        if (courseName === '') addError("Course number is required.", "CourseNumber");
    }

    function validateCalendarEntry() {
        var courseName = $("textarea[name='CalendarEntry']").val().trim();
        if (courseName === '') addError("Calendar entry is required.", "CalendarEntry");
    }

    // STEP TWO 
    $(".step-two .button").click(function() {
        clearErrors();

        validateCrossImpact();
        validateStudentImpact();
        validateLibraryImpact();
        validateItsImpact();

        if (hasErrors()) {
            printErrors();
            return false;
        }
		
        showStepThree();
        showContext();
        setProgressBar("66.66%");

        $(".step-two-progress").on("click", function (e) {
            showStepTwo();
        });

        $(".step-three-progress").addClass("cursor");
        $(".step-three-progress").on("click", function (e) {
            $(".step-two .button").click();
        });
        return true;
    });

    function validateCrossImpact() {
        var crossImpact = $("textarea[name='CrossImpact']").val().trim();
        if (crossImpact === '') addError("Cross impact is required.", "CrossImpact");
    }

    function validateStudentImpact() {
        var studentImpact = $("textarea[name='StudentImpact']").val().trim();
        if (studentImpact === '') addError("Student impact is required.", "StudentImpact");
    }

    function validateLibraryImpact() {
        var libraryImpact = $("textarea[name='LibraryImpact']").val().trim();
        if (libraryImpact === '') addError("Library impact is required.", "LibraryImpact");
    }

    function validateItsImpact() {
        var itsImpact = $("textarea[name='ItsImpact']").val().trim();
        if (itsImpact === '') addError("ITS impact is required.", "ItsImpact");
    }
	
    // STEP THREE 
    $(".step-three .button").click(function () {
        $("form").submit();
    });

</script>